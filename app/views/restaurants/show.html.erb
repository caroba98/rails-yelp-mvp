<div class="container m-3">
<div class="card-category w-50" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/random/?restaurant')">
  <h1><%= @restaurant.name %></h1>
</div>


<div class="card w-50 mb-3 p-2">
<p>Address: <%= @restaurant.address %><br>
Phone number: <%= @restaurant.phone_number %><br>
Category: <%= @restaurant.category %></p>

<div class="d-flex justify-content-between">
<h6>Reviews:</h6>
<%= link_to 'Add Review  <i class="fa-solid fa-pen-nib ps-1"></i>'.html_safe, new_restaurant_review_path(@restaurant), class:"d-flex justify-content-end pe-3 sm-lnk" %>
</div>
<% @restaurant.reviews.each do |review| %>
<div class="card p-1 m-1 details">
<p><%= "⭐" * review.rating %><br><%= review.content %></p>
</div>
<% end %>

</div>
<%= link_to '<i class="fa-solid fa-rotate-left"></i> Back to Restaurants'.html_safe, restaurants_path, class:"sm-lnk" %>
</div>
